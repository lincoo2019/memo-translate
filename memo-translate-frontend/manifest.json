{
  "manifest_version": 3,
  "name": "Memo Translate - 划词记忆助手",
  "version": "1.0",
  "description": "基于Google翻译的划词翻译工具，带有单词记忆和复习功能。",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://translate-pa.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["marked.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "查看生词本"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["soundwave.html", "ggwave.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
